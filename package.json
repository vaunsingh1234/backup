{
  "name": "smart-tourist-safety-system",
  "version": "1.0.0",
  "description": "AI-powered tourist safety monitoring system with blockchain digital ID, geo-fencing, and incident response for Indian tourism",
  "main": "backend/app.js",
  "scripts": {
    "dev": "nodemon backend/app.js",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up",
    "build": "echo 'No build step needed for Express.js'",
    "start": "node backend/app.js",
    "start:prod": "NODE_ENV=production node backend/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "eslint \"backend/**/*.js\" --fix",
    "lint:fix": "eslint backend --ext .js --fix",
    "format": "prettier --write backend/**/*.{js,json}",
    "docker:build": "docker build -t bon-voyage-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env bon-voyage-backend",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "migrate": "echo 'No migrations needed for MongoDB'",
    "seed": "echo 'No seed data needed'",
    "db:migrate": "echo 'No migrations needed for MongoDB'",
    "db:seed": "echo 'No seed data needed'",
    "blockchain:deploy": "echo 'Blockchain deployment not implemented'",
    "blockchain:test": "echo 'Blockchain tests not implemented'"
  },
  "keywords": [
    "tourist-safety",
    "blockchain",
    "ai",
    "geofencing",
    "incident-response",
    "digital-id",
    "india-tourism",
    "northeast-india"
  ],
  "author": "Tourist Safety Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@google-cloud/translate": "^8.0.2",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^11.11.0",
    "geolib": "^3.3.4",
    "helmet": "^7.0.0",
    "i18n": "^0.15.1",
    "ipfs-http-client": "^60.0.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "mongoose": "^7.6.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.7",
    "otp-generator": "^4.0.1",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "rate-limiter-flexible": "^3.0.5",
    "redis": "^4.6.10",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.2",
    "turf": "^3.0.14",
    "twilio": "^4.19.0",
    "uuid": "^9.0.1",
    "web3": "^4.2.1",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.5",
    "@types/compression": "^1.7.4",
    "@types/cors": "^2.8.15",
    "@types/crypto-js": "^4.2.1",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/morgan": "^1.9.7",
    "@types/multer": "^1.4.9",
    "@types/node": "^20.8.6",
    "@types/qrcode": "^1.5.4",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "chai": "^4.3.10",
    "docker": "^1.0.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "backend/**/*.{js}",
      "!backend/**/*.d.ts",
      "!backend/**/*.spec.js",
      "!backend/**/*.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.{js}",
      "**/*.(test|spec).{js}"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/smart-tourist-safety-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/smart-tourist-safety-system/issues"
  },
  "homepage": "https://github.com/your-org/smart-tourist-safety-system#readme"
}